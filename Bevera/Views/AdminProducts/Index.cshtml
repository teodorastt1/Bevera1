@model Bevera.Models.ViewModels.PagedResult<Bevera.Models.ViewModels.AdminProductRowViewModel>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Products";
    var categories = ViewBag.Categories as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new();
}

<div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
    <div>
        <h1 class="mb-1">@ViewData["Title"]</h1>
        <div class="text-muted small">Общо продукти: <strong>@Model.TotalItems</strong></div>
    </div>
    <div class="d-flex gap-2">
        <a class="btn btn-success" asp-action="Create">+ Add Product</a>
    </div>
</div>

<form method="get" class="card card-body shadow-sm mb-3">
    <div class="row g-2 align-items-end">
        <div class="col-md-4">
            <label class="form-label mb-1">Search</label>
            <input name="q" value="@ViewBag.Q" class="form-control" placeholder="Product name..." />
        </div>

        <div class="col-md-3">
            <label class="form-label mb-1">Category</label>
            <select class="form-select" name="categoryId">
                <option value="">(All)</option>
                @foreach (var c in categories)
                {
                    <option value="@c.Value" selected="@(ViewBag.CategoryId?.ToString() == c.Value)">@c.Text</option>
                }
            </select>
        </div>

        <div class="col-md-3">
            <label class="form-label mb-1">Stock</label>
            <select class="form-select" name="stock">
                <option value="" selected="@(ViewBag.Stock == null || ViewBag.Stock == "")">(All)</option>
                <option value="low" selected="@(ViewBag.Stock == "low")">Low stock</option>
            </select>
        </div>

        <div class="col-md-2 d-flex gap-2">
            <button class="btn btn-primary w-100" type="submit">Filter</button>
            <a class="btn btn-outline-secondary w-100" asp-action="Index">Clear</a>
        </div>
    </div>

    <input type="hidden" name="pageSize" value="@(ViewBag.PageSize ?? Model.PageSize)" />
</form>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width:80px;">Image</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th style="width:120px;">Price</th>
                    <th style="width:140px;">Stock</th>
                    <th style="width:120px;">Active</th>
                    <th style="width:220px;" class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.Items)
                {
                    <tr class="@(p.IsLowStock ? "table-warning" : "")">
                        <td>
                            @if (!string.IsNullOrWhiteSpace(p.ImagePath))
                            {
                                <img src="@p.ImagePath" style="width:60px;height:60px;object-fit:cover;border-radius:10px;" />
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td class="fw-semibold">@p.Name</td>
                        <td>@p.CategoryName</td>
                        <td>@p.Price.ToString("0.00") лв.</td>
                        <td>
                            <span class="fw-semibold">@p.StockQty</span>
                            <span class="text-muted"> / low ≤ @p.LowStockThreshold</span>
                        </td>
                        <td>
                            @if (p.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@p.Id">Edit</a>

                                <form method="post" asp-action="Delete" asp-route-id="@p.Id"
                                      onsubmit="return confirm('Delete product: @p.Name ?');">
                                    @Html.AntiForgeryToken()
                                    <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@{
    var pager = new Bevera.Models.ViewModels.PaginationViewModel
    {
        Page = Model.Page,
        TotalPages = Model.TotalPages,
        Controller = "AdminProducts",
        Action = "Index",
        RouteValues = new Dictionary<string, string?>
        {
            ["q"] = ViewBag.Q as string,
            ["categoryId"] = ViewBag.CategoryId?.ToString(),
            ["stock"] = ViewBag.Stock as string,
            ["pageSize"] = (ViewBag.PageSize ?? Model.PageSize).ToString()
        }
    };
}
<partial name="_Pagination" model="pager" />
