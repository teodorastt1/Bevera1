@model Bevera.Models.ViewModels.AdminProductFormViewModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Create Product";
}

<h1 class="mb-3">@ViewData["Title"]</h1>

<form method="post" enctype="multipart/form-data" class="card card-body shadow-sm">
    @Html.AntiForgeryToken()

    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label class="form-label">Price (лв.)</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label class="form-label">Category</label>
            <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label class="form-label">Stock Qty</label>
            <input asp-for="StockQty" class="form-control" />
            <span asp-validation-for="StockQty" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label class="form-label">Low Stock Threshold</label>
            <input asp-for="LowStockThreshold" class="form-control" />
            <span asp-validation-for="LowStockThreshold" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label class="form-label">Active</label>
            <div class="form-check">
                <input asp-for="IsActive" class="form-check-input" />
                <label class="form-check-label" asp-for="IsActive">Visible for clients</label>
            </div>
        </div>

        <div class="col-md-12">
            <label class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label">Image (optional)</label>
            <input asp-for="ImageFile" type="file" class="form-control" />
        </div>
    </div>

    <div class="mt-4 d-flex gap-2">
        <button class="btn btn-success" type="submit">Save</button>
        <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
