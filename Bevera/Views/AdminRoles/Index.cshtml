@model Bevera.Models.ViewModels.PagedResult<Bevera.Models.ViewModels.UserRoleRowViewModel>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Admin панел - роли";
}

<div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
    <div>
        <h1 class="mb-1">@ViewData["Title"]</h1>
        <div class="text-muted small">
            Общо потребители: <strong>@Model.TotalItems</strong>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" asp-action="Index">Refresh</a>
        <a class="btn btn-success" asp-action="Create">+ New user</a>
    </div>
</div>

<form method="get" class="card card-body shadow-sm mb-3">
    <div class="row g-2 align-items-end">
        <div class="col-md-5">
            <label class="form-label mb-1">Search</label>
            <input name="q" value="@ViewBag.Q" class="form-control"
                   placeholder="Email / име / телефон / адрес..." />
        </div>

        <div class="col-md-4">
            <label class="form-label mb-1">Role</label>
            <select class="form-select" name="role">
                <option value="">(All)</option>
                <option value="Admin" selected="@(ViewBag.Role == "Admin")">Admin</option>
                <option value="Worker" selected="@(ViewBag.Role == "Worker")">Worker</option>
                <option value="Client" selected="@(ViewBag.Role == "Client")">Client</option>
            </select>
        </div>

        <div class="col-md-3 d-flex gap-2">
            <button class="btn btn-primary w-100" type="submit">Filter</button>
            <a class="btn btn-outline-secondary w-100" asp-action="Index">Clear</a>
        </div>
    </div>

    <!-- за да НЕ се губи pageSize при филтър -->
    <input type="hidden" name="pageSize" value="@(ViewBag.PageSize ?? Model.PageSize)" />
</form>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Email</th>
                    <th>Име</th>
                    <th>Телефон</th>
                    <th>Адрес</th>
                    <th style="width:140px;">Роля</th>
                    <th style="width:220px;" class="text-end">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model.Items)
                {
                    <tr>
                        <td class="fw-semibold">@u.Email</td>
                        <td>@u.FirstName @u.LastName</td>

                        <td>
                            @if (!string.IsNullOrWhiteSpace(u.PhoneNumber))
                            {
                                @u.PhoneNumber
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>

                        <td>
                            @if (!string.IsNullOrWhiteSpace(u.Address))
                            {
                                @u.Address
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>

                        <td>
                            @{
                                var roleName = u.RoleName ?? "";
                                var badge = roleName == "Admin" ? "bg-danger"
                                : roleName == "Worker" ? "bg-warning text-dark"
                                : roleName == "Client" ? "bg-primary"
                                : "bg-secondary";
                            }

                            @if (!string.IsNullOrWhiteSpace(u.RoleName))
                            {
                                <span class="badge @badge">@u.RoleName</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">(няма)</span>
                            }
                        </td>

                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a class="btn btn-sm btn-outline-secondary"
                                   asp-action="Details"
                                   asp-route-id="@u.UserId">Details</a>

                                <a class="btn btn-sm btn-primary"
                                   asp-action="Edit"
                                   asp-route-id="@u.UserId">Edit</a>

                                <form method="post"
                                      asp-action="Delete"
                                      asp-route-id="@u.UserId"
                                      onsubmit="return confirm('Сигурна ли си, че искаш да изтриеш потребителя: @u.Email ?');">
                                    @Html.AntiForgeryToken()
                                    <button class="btn btn-sm btn-outline-danger" type="submit">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@{
    var pager = new Bevera.Models.ViewModels.PaginationViewModel
    {
        Page = Model.Page,
        TotalPages = Model.TotalPages,
        Controller = "AdminRoles",
        Action = "Index",
        RouteValues = new Dictionary<string, string?>
        {
            ["q"] = ViewBag.Q as string,
            ["role"] = ViewBag.Role as string,
            ["pageSize"] = (ViewBag.PageSize ?? Model.PageSize).ToString()
        }
    };
}

<partial name="_Pagination" model="pager" />
}
