@model List<Bevera.Models.Catalog.Category>

@{
    ViewData["Title"] = ViewBag.CategoryName ?? "Категория";
}

<div class="container py-4">
    <h1 class="mb-4" style="font-family:'Playfair Display',serif;font-weight:800">@ViewData["Title"]</h1>

    <div class="row g-3">
        @foreach (var c in Model)
        {
            var img = string.IsNullOrWhiteSpace(c.ImagePath) ? "/images/image-1.jpg" : c.ImagePath;

            <div class="col-12 col-md-6 col-lg-4">
                <a class="subcat-tile" asp-controller="Client" asp-action="Category" asp-route-id="@c.Id">
                    <div class="subcat-img">
                        <img src="@img" alt="@c.Name" />
                    </div>
                    <div class="subcat-name">@c.Name</div>
                </a>
            </div>
        }
    </div>
</div>

<style>
    .subcat-tile{
        display:block;
        text-decoration:none;
        color:inherit;
        background:#fff;
        border:1px solid rgba(0,0,0,.08);
        border-radius:18px;
        overflow:hidden;
        box-shadow:0 12px 30px rgba(0,0,0,.06);
        transition:transform .15s ease, box-shadow .15s ease;
    }
    .subcat-tile:hover{transform:translateY(-2px); box-shadow:0 18px 45px rgba(0,0,0,.10)}
    .subcat-img{height:260px; background:#f6f6f6; display:flex; align-items:center; justify-content:center; padding:18px;}
    .subcat-img img{width:100%; height:100%; object-fit:contain;}
    .subcat-name{padding:14px 16px; font-weight:800; text-align:center;}
</style>
