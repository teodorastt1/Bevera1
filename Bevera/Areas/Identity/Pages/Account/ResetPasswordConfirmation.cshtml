@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Паролата е сменена";
}

<div class="auth-wrap">
    <div class="auth-left" style="background-image:url('/images/forgotPass.png')">
        <div class="auth-left-overlay">
            <div>
                <div class="auth-brand-title">Bevera</div>
                <div class="auth-brand-sub">Склад за напитки</div>
            </div>
        </div>
    </div>

    <div class="auth-right">
        <div class="auth-glass text-center">
            <h1 class="auth-title">Паролата е сменена</h1>
            <div class="auth-muted">Вече можеш да влезеш с новата си парола.</div>

            <a asp-page="./Login" class="auth-btn w-100 mt-2">Вход</a>
        </div>
    </div>
</div>

<script>
    window.addEventListener("load", function () {
        if (typeof showToast === "function") {
            showToast("Успешно сменихте паролата си.", "success");
        }
    });
</script>
