@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="auth-wrap">
    <!-- LEFT: image -->
    <div class="auth-left" style="background-image:url('/images/image-5.jpg')">
        <div class="auth-left-overlay">
            <div class="auth-brand">
                <div class="auth-brand-title">Bevera</div>
                <div class="auth-brand-sub">Склад за напитки</div>
            </div>
        </div>
    </div>

    <!-- RIGHT: glass -->
    <div class="auth-right">
        <div class="auth-glass">
            <h1 class="auth-title">Вход</h1>
            <p class="auth-muted">Въведи имейл и парола, за да продължиш.</p>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Имейл</label>
                    <input asp-for="Input.Email" class="form-control auth-input" autocomplete="username" placeholder="name@email.com" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label">Парола</label>
                    <input asp-for="Input.Password" class="form-control auth-input" autocomplete="current-password" placeholder="********" />
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <label class="d-flex align-items-center gap-2 m-0">
                        <input class="form-check-input m-0" asp-for="Input.RememberMe" />
                        <span class="small text-white-50">Запомни ме</span>
                    </label>

                    <a class="small text-white-50 text-decoration-none" asp-page="./ForgotPassword">
                        Забравена парола?
                    </a>
                </div>

                <div class="d-grid">
                    <button id="login-submit" type="submit" class="btn auth-btn">
                        Вход
                    </button>
                </div>

                <div class="auth-links mt-3">
                    <span>Нямаш профил?</span>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрация</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
