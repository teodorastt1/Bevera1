@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    ViewData["BodyClass"] = ""; // не ни трябва home тук
}

<div class="auth-wrap">
    <!-- LEFT: image -->
    <div class="auth-left" style="background-image:url('/images/image-5.jpg')">
        <div class="auth-left-overlay">
            <div class="auth-brand">
                <div class="auth-brand-title">Bevera</div>
                <div class="auth-brand-sub">Склад за напитки</div>
            </div>
        </div>
    </div>

    <!-- RIGHT: blurred glass -->
    <div class="auth-right">
        <div class="auth-glass">
            <h1 class="auth-title">Създай профил</h1>
            <p class="auth-muted">Попълни данните си, за да започнеш поръчка.</p>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Име</label>
                        <input asp-for="Input.FirstName" class="form-control auth-input" placeholder="First Name" />
                        <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Фамилия</label>
                        <input asp-for="Input.LastName" class="form-control auth-input" placeholder="Last Name" />
                        <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label class="form-label">Имейл</label>
                        <input asp-for="Input.Email" class="form-control auth-input" autocomplete="username" placeholder="name@email.com" />
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Телефон</label>
                        <input asp-for="Input.PhoneNumber" class="form-control auth-input" autocomplete="tel" placeholder="+359..." />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Адрес</label>
                        <input asp-for="Input.Address" class="form-control auth-input" placeholder="гр./ул./№" />
                        <span asp-validation-for="Input.Address" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Парола</label>
                        <input asp-for="Input.Password" class="form-control auth-input" autocomplete="new-password" placeholder="********" />
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Повтори парола</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control auth-input" autocomplete="new-password" placeholder="********" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="col-12 d-grid mt-2">
                        <button id="registerSubmit" type="submit" class="btn auth-btn">
                            Регистрация
                        </button>
                    </div>
                </div>

                <div class="auth-links mt-3">
                    <span>Имаш профил?</span>
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Влез</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
