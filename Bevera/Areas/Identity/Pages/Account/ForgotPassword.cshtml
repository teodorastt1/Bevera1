@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Забравена парола";
}

<div class="auth-wrap auth-forgot" style="--auth-bg:url('/images/forgotPass.png');">
    <div class="auth-overlay"></div>

    <div class="auth-card shadow-lg">
        <div class="auth-header">
            <div class="auth-brand">
                <span class="auth-brand-mark">Bevera</span>
                <span class="auth-brand-sub">Reset</span>
            </div>

            <h1 class="auth-title">Забравена парола</h1>
            <p class="auth-subtitle">
                Въведи имейла си и ще ти изпратим линк за смяна на паролата.
            </p>
        </div>

        <form method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="auth-validation"></div>

            <div class="auth-field">
                <label asp-for="Input.Email" class="auth-label">Email</label>
                <div class="auth-input-group">
                    <span class="auth-icon"><i class="bi bi-envelope"></i></span>
                    <input asp-for="Input.Email" class="auth-input" autocomplete="email" placeholder="name@example.com" />
                </div>
                <span asp-validation-for="Input.Email" class="auth-error"></span>
            </div>

            <button type="submit" class="auth-btn">
                <i class="bi bi-send me-2"></i> Изпрати линк
            </button>

            <div class="auth-links">
                <a asp-page="./Login" class="auth-link">
                    <i class="bi bi-arrow-left"></i> Обратно към вход
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
