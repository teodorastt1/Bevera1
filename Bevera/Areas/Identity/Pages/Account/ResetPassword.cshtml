@page
@model Bevera.Areas.Identity.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Смяна на парола";
}

<div class="auth-wrap">
    <div class="auth-left" style="background-image:url('/images/forgotPass.png')">
        <div class="auth-left-overlay">
            <div>
                <div class="auth-brand-title">Bevera</div>
                <div class="auth-brand-sub">Склад за напитки</div>
            </div>
        </div>
    </div>

    <div class="auth-right">
        <div class="auth-glass">
            <h1 class="auth-title">Смяна на парола</h1>
            <div class="auth-muted">Въведи новата си парола и я потвърди.</div>

            <form method="post">
                <!-- важно: подсигуряваме че Email се праща при POST -->
                <input type="hidden" asp-for="Input.Email" />

                <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label fw-semibold">Имейл</label>
                    <input asp-for="Input.Email" class="form-control auth-input" readonly />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label fw-semibold">Нова парола</label>
                    <input asp-for="Input.Password" class="form-control auth-input" autocomplete="new-password" />
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold">Потвърди паролата</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control auth-input" autocomplete="new-password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                </div>

                <button type="submit" class="auth-btn w-100">
                    Смени паролата
                </button>

                <div class="auth-links mt-3">
                    <a asp-page="./Login">Обратно към вход</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
